modules = ["java-17"]
[nix]
channel = "stable-24_05"
packages = ["unzip", "maven"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "JavaBot"

[[workflows.workflow]]
name = "JavaBot"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd . && /nix/store/2vwkssqpzykk37r996cafq7x63imf4sp-openjdk-21+35/bin/javac -d target/classes -cp \"lib/*:target/classes\" $(find src/main/java -name \"*.java\") && /nix/store/2vwkssqpzykk37r996cafq7x63imf4sp-openjdk-21+35/bin/java -cp \"lib/*:target/classes\" com.deadside.bot.Main"

[deployment]
run = ["sh", "-c", "cd . && javac -d target/classes -cp \"lib/*:target/classes\" $(find src/main/java -name \"*.java\") && java -cp \"lib/*:target/classes\" com.deadside.bot.Main"]
